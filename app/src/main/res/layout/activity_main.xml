<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMint"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="259dp"
            android:layout_height="73dp"
            android:text="Witaj w Milionerach!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.146"
            android:textSize="28sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp"
            android:id="@+id/textView" tools:textAlignment="center" android:textColor="@color/colorBlack"/>
    <Button
            android:text="NOWA GRA"
            android:layout_width="128dp"
            android:layout_height="66dp"
            android:id="@+id/buttonNewGame" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonRules"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.652"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="116dp"
            android:onClick="newGameButtonOnClick"
    />
    <Button
            android:text="INSTRUKCJA"
            android:layout_width="128dp"
            android:layout_height="66dp"
            android:id="@+id/buttonRules" android:layout_marginBottom="112dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="116dp"
            android:onClick="rulesButtonOnClick"
    />

</android.support.constraint.ConstraintLayout>